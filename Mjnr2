    <script>
        // ====================
        // CLOUD DATA STORAGE CONFIG
        // ====================
        
        const CLOUD_CONFIG = {
            // Option 1: GitHub Gist (RECOMMENDED - Free & Reliable)
            GITHUB_GIST_ID: 'YOUR_GIST_ID_HERE', // You'll get this after creating a gist
            GITHUB_TOKEN: 'YOUR_GITHUB_TOKEN_HERE', // Optional but recommended
            
            // Option 2: Google Sheets (Alternative)
            GOOGLE_SHEETS_ID: '1BxiMVs0XRA5nFMdKvBdBZjgmUUqptlbs74OgvE2upms', // Example sheet ID
            GOOGLE_SHEET_NAME: 'Motorcycles',
            
            // Option 3: JSONBin.io (Simple alternative)
            JSONBIN_ID: 'YOUR_JSONBIN_ID_HERE',
            JSONBIN_API_KEY: 'YOUR_JSONBIN_API_KEY_HERE',
            
            // Fallback: LocalStorage as cache
            CACHE_KEY: 'mwiruti_cloud_cache',
            CACHE_EXPIRY: 5 * 60 * 1000, // 5 minutes
        };

        // ====================
        // ADMIN AUTHENTICATION
        // ====================
        
        const ADMIN_CONFIG = {
            DEFAULT_USERNAME: 'admin',
            DEFAULT_PASSWORD: 'mwirutijnr2025',
            CREDENTIALS_KEY: 'mwiruti_admin_credentials',
            SESSION_KEY: 'mwiruti_admin_session',
            SESSION_TIMEOUT: 8 * 60 * 60 * 1000
        };

        // ====================
        // STATE MANAGEMENT
        // ====================
        
        let motorcycles = [];
        let testimonials = [];
        let uploadedPhotos = [];
        let isAdminLoggedIn = false;
        let adminSessionExpiry = null;
        let cloudDataLoaded = false;

        // ====================
        // DEFAULT DATA (FALLBACK)
        // ====================
        
        const defaultMotorcycles = [
            {
                id: 1,
