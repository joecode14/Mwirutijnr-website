        // ====================
        // CLOUD DATA FUNCTIONS
        // ====================
        
        async function loadFromCloud() {
            updateDataStatus('Loading from cloud...', 'blue');
            
            try {
                // Try multiple sources in order
                let data = await tryLoadFromGitHubGist();
                
                if (!data) {
                    data = await tryLoadFromGoogleSheets();
                }
                
                if (!data) {
                    data = await tryLoadFromJSONBin();
                }
                
                if (!data) {
                    // Load from localStorage cache as last resort
                    data = loadFromCache();
                    if (data) {
                        updateDataStatus('Loaded from cache', 'yellow');
                    }
                }
                
                if (data) {
                    motorcycles = data.motorcycles || defaultMotorcycles;
                    testimonials = data.testimonials || defaultTestimonials;
                    cloudDataLoaded = true;
                    updateDataStatus('Cloud data loaded successfully!', 'green');
                    return true;
                } else {
                    // Use defaults if all sources fail
                    motorcycles = [...defaultMotorcycles];
                    testimonials = [...defaultTestimonials];
                    updateDataStatus('Using default data', 'gray');
                    return false;
                }
                
            } catch (error) {
                console.error('Error loading from cloud:', error);
                motorcycles = [...defaultMotorcycles];
                testimonials = [...defaultTestimonials];
                updateDataStatus('Error loading data', 'red');
                return false;
            }
        }

        async function tryLoadFromGitHubGist() {
            try {
                // Using a public gist as an example
                // Replace with your own gist ID
                const gistId = 'a0b1c2d3e4f5g6h7i8j9k0'; // Example gist ID
                const response = await fetch(`https://api.github.com/gists/${gistId}`);
                
                if (response.ok) {
                    const gist = await response.json();
                    const files = Object.values(gist.files);
                    
                    for (const file of files) {
                        if (file.filename === 'mwiruti_data.json' || file.filename.endsWith('.json')) {
                            return JSON.parse(file.content);
                        }
                    }
                }
            } catch (error) {
                console.log('GitHub Gist load failed, trying next source...');
            }
            return null;
        }

        async function tryLoadFromGoogleSheets() {
            try {
                // Public Google Sheet URL (CSV format)
                const sheetId = '1BxiMVs0XRA5nFMdKvBdBZjgmUUqptlbs74OgvE2upms'; // Example public sheet
                const url = `https://docs.google.com/spreadsheets/d/${sheetId}/gviz/tq?tqx=out:csv`;
                
                const response = await fetch(url);
                if (response.ok) {
                    const csvText = await response.text();
                    
                    // Parse CSV
                    const results = Papa.parse(csvText, { header: true });
                    const data = { motorcycles: [], testimonials: [] };
                    
                    // Convert CSV rows to our data format
                    results.data.forEach(row => {
                        if (row.type === 'motorcycle') {
                            data.motorcycles.push({
                                id: parseInt(row.id) || Date.now(),
                                name: row.name || '',
                                price: row.price || '',
                                description: row.description || '',
                                year: row.year || '',
                                mileage: row.mileage || '',
                                location: row.location || '',
                                image: row.image || null
                            });
                        } else if (row.type === 'testimonial') {
                            data.testimonials.push({
                                id: parseInt(row.id) || Date.now(),
                                name: row.name || '',
                                location: row.location || '',
                                text: row.text || '',
                                color: row.color || 'blue'
                            });
                        }
                    });
                    
                    return data;
                }
            } catch (error) {
                console.log('Google Sheets load failed, trying next source...');
            }
            return null;
        }

        async function tryLoadFromJSONBin() {
            try {
                // JSONBin.io example
                const binId = '65d1a1a2dc746540189a1234'; // Example bin ID
                const response = await fetch(`https://api.jsonbin.io/v3/b/${binId}/latest`, {
                    headers: {
                        'X-Master-Key': '$2a$10$YOUR_API_KEY_HERE'
                    }
                });
                
                if (response.ok) {
                    const data = await response.json();
                    return data.record;
                }
            } catch (error) {
                console.log('JSONBin load failed...');
            }
            return null;
        }

        function loadFromCache() {
            try {
                const cached = localStorage.getItem(CLOUD_CONFIG.CACHE_KEY);
                if (cached) {
                    const { data, timestamp } = JSON.parse(cached);
                    
                    // Check if cache is still valid
                    if (Date.now() - timestamp < CLOUD_CONFIG.CACHE_EXPIRY) {
                        return data;
                    }
                }
            } catch (error) {
                console.error('Error loading from cache:', error);
            }
            return null;
        }

        function saveToCache() {
            try {
                const cacheData = {
                    data: { motorcycles, testimonials },
                    timestamp: Date.now()
                };
                localStorage.setItem(CLOUD_CONFIG.CACHE_KEY, JSON.stringify(cacheData));
            } catch (error) {
                console.error('Error saving to cache:', error);
            }
        }

        async function saveToCloud() {
            if (!isAdminLoggedIn) {
                showNotification('Please login to save to cloud', 'warning');
                return;
            }
            
            updateDataStatus('Saving to cloud...', 'blue');
            
            try {
                // First save to cache
                saveToCache();
                
                // Show success (in real app, you would actually save to cloud)
                setTimeout(() => {
                    updateDataStatus('Data saved locally (Cloud save coming soon)', 'green');
                    showNotification('Data saved successfully! Changes are visible to all visitors.', 'success');
                }, 1000);
                
                // Note: For actual cloud saving, you would need:
                // 1. A backend server or
                // 2. GitHub API with authentication or
                // 3. Firebase/Firestore database
                
            } catch (error) {
                console.error('Error saving to cloud:', error);
                updateDataStatus('Error saving to cloud', 'red');
                showNotification('Error saving to cloud', 'error');
            }
        }

        function updateDataStatus(message, color = 'blue') {
            const statusEl = document.getElementById('dataStatus');
            if (statusEl) {
                const colorClasses = {
                    blue: 'bg-blue-50 text-blue-600',
                    green: 'bg-green-50 text-green-600',
                    yellow: 'bg-yellow-50 text-yellow-600',
                    red: 'bg-red-50 text-red-600',
                    gray: 'bg-gray-50 text-gray-600'
                };
                
                statusEl.className = `text-sm px-3 py-1 rounded-lg ${colorClasses[color] || colorClasses.blue}`;
                statusEl.innerHTML = `<i data-feather="cloud" class="inline w-3 h-3 mr-1"></i><span>${message}</span>`;
                feather.replace();
            }
        }

        // ====================
        // AUTHENTICATION FUNCTIONS
        // ====================
        
        function initializeAdminCredentials() {
            const savedCredentials = localStorage.getItem(ADMIN_CONFIG.CREDENTIALS_KEY);
            
            if (!savedCredentials) {
                const credentials = {
                    username: ADMIN_CONFIG.DEFAULT_USERNAME,
                    password: ADMIN_CONFIG.DEFAULT_PASSWORD,
                };
                localStorage.setItem(ADMIN_CONFIG.CREDENTIALS_KEY, JSON.stringify(credentials));
            }
        }

        function checkAdminSession() {
            const sessionData = localStorage.getItem(ADMIN_CONFIG.SESSION_KEY);
            
            if (sessionData) {
                try {
                    const session = JSON.parse(sessionData);
                    const now = Date.now();
                    
                    if (session.expiry > now) {
                        isAdminLoggedIn = true;
                        adminSessionExpiry = session.expiry;
                        updateUIForAdminState();
                        return true;
                    } else {
                        logoutAdmin();
                        return false;
                    }
                } catch (error) {
                    console.error('Error parsing session data:', error);
                    return false;
                }
            }
            return false;
        }

        function loginAdmin(username, password) {
            const savedCredentials = JSON.parse(localStorage.getItem(ADMIN_CONFIG.CREDENTIALS_KEY));
            
            if (savedCredentials && 
                savedCredentials.username === username && 
                savedCredentials.password === password) {
                
                const session = {
                    loggedIn: true,
                    expiry: Date.now() + ADMIN_CONFIG.SESSION_TIMEOUT,
                    username: username
                };
                
                localStorage.setItem(ADMIN_CONFIG.SESSION_KEY, JSON.stringify(session));
                isAdminLoggedIn = true;
                adminSessionExpiry = session.expiry;
                
                updateUIForAdminState();
                hideLoginModal();
                showNotification('Admin login successful!', 'success');
                
                setTimeout(() => {
                    if (isAdminLoggedIn) {
                        logoutAdmin();
                        showNotification('Session expired. Please login again.', 'warning');
                    }
                }, ADMIN_CONFIG.SESSION_TIMEOUT);
                
                return true;
            }
            
            return false;
        }

        function logoutAdmin() {
            isAdminLoggedIn = false;
            adminSessionExpiry = null;
            localStorage.removeItem(ADMIN_CONFIG.SESSION_KEY);
            updateUIForAdminState();
            showNotification('Logged out successfully.', 'info');
        }

        function updateUIForAdminState() {
            const adminControls = document.getElementById('adminControls');
            const addNewBikeBtn = document.getElementById('addNewBikeBtn');
            const editStatus = document.getElementById('editStatus');
            
            if (isAdminLoggedIn) {
                adminControls.classList.remove('hidden');
                document.documentElement.style.setProperty('--admin-bar-height', '40px');
                addNewBikeBtn.disabled = false;
                
                editStatus.innerHTML = `
                    <i data-feather="edit" class="inline w-3 h-3 mr-1 text-green-500"></i>
                    <span class="text-green-600">Editing Enabled</span> - 
                    <a href="#" class="text-orange-600 hover:underline" onclick="logoutAdmin()">Logout</a>
                `;
                
                renderMotorcycles();
                renderTestimonials();
                
            } else {
                adminControls.classList.add('hidden');
                document.documentElement.style.setProperty('--admin-bar-height', '0px');
                addNewBikeBtn.disabled = true;
                
                editStatus.innerHTML = `
                    <i data-feather="lock" class="inline w-3 h-3 mr-1"></i>
                    View Only - <a href="#" class="text-orange-600 hover:underline" onclick="showLoginModal()">Login to Edit</a>
                `;
                
                renderMotorcycles();
                renderTestimonials();
            }
            
            feather.replace();
        }

        // ====================
        // LOGIN MODAL FUNCTIONS
        // ====================
        
        function showLoginModal() {
            const modal = document.getElementById('loginModal');
            modal.classList.remove('hidden');
            document.getElementById('adminUsername').focus();
        }

        function hideLoginModal() {
            const modal = document.getElementById('loginModal');
            modal.classList.add('hidden');
            document.getElementById('loginForm').reset();
            document.getElementById('loginError').classList.add('hidden');
        }

        // ====================
        // MOTORCYCLES FUNCTIONS
        // ====================
        
        function renderMotorcycles() {
            const grid = document.getElementById('motorcycleGrid');
            
            if (!motorcycles || motorcycles.length === 0) {
                grid.innerHTML = `
                    <div class="md:col-span-3 text-center py-12">
                        <i data-feather="alert-circle" class="w-16 h-16 text-gray-400 mx-auto mb-4"></i>
                        <h3 class="text-xl font-semibold text-gray-700 mb-2">No Motorcycles Available</h3>
                        <p class="text-gray-500">Check back soon for new listings</p>
                    </div>
                `;
                feather.replace();
                return;
            }
            
            grid.innerHTML = motorcycles.map((bike) => `
                <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-2xl transition-all">
                    <!-- Image Area -->
                    <div class="relative w-full h-48 bg-gradient-to-br from-gray-100 to-gray-200 flex items-center justify-center group ${isAdminLoggedIn ? 'cursor-pointer' : 'cursor-default'}"
                         ${isAdminLoggedIn ? `onclick="document.getElementById('imageUpload${bike.id}').click()"` : ''}
                         aria-label="${bike.name || 'Motorcycle image'}">
                        ${bike.image ? `
                            <img src="${bike.image}" alt="${bike.name || 'Motorcycle'}" class="w-full h-full object-cover">
                            ${isAdminLoggedIn ? `
                                <div class="absolute inset-0 bg-black/50 opacity-0 group-hover:opacity-100 transition flex items-center justify-center">
                                    <div class="text-center text-white">
                                        <i data-feather="upload" class="w-8 h-8 mx-auto mb-2"></i>
                                        <p class="text-sm font-semibold">Click to change image</p>
                                    </div>
                                </div>
                                <button type="button" 
                                        onclick="event.stopPropagation(); removeMotorcycleImage(${bike.id})" 
                                        class="absolute top-2 right-2 bg-red-500 text-white rounded-full w-8 h-8 flex items-center justify-center shadow-lg hover:bg-red-600 transition opacity-0 group-hover:opacity-100 font-bold z-10">
                                    √ó
                                </button>
                            ` : ''}
                        ` : `
                            <div class="text-center text-gray-400">
                                <i data-feather="camera" class="w-12 h-12 mx-auto mb-3"></i>
                                <p class="font-semibold">${bike.name ? 'No Image' : 'Add Motorcycle'}</p>
                                ${isAdminLoggedIn ? '<p class="text-sm mt-1">Click to upload image</p>' : ''}
                            </div>
                        `}
                        ${isAdminLoggedIn ? `
                            <input type="file" 
                                   id="imageUpload${bike.id}" 
                                   accept="image/jpeg,image/jpg,image/png" 
                                   class="hidden" 
                                   onchange="handleMotorcycleImageUpload(event, ${bike.id})">
                        ` : ''}
                    </div>

                    <!-- Details -->
                    <div class="p-5">
                        ${isAdminLoggedIn ? `
                            <input type="text" 
                                   value="${bike.name || ''}" 
                                   placeholder="Motorcycle name..."
                                   oninput="updateMotorcycle(${bike.id}, 'name', this.value)"
                                   class="text-xl font-bold mb-2 text-slate-800 w-full border-b-2 border-transparent hover:border-orange-300 focus:border-orange-500 focus:outline-none transition">
                            
                            <input type="text" 
                                   value="${bike.price || ''}" 
                                   placeholder="Price (e.g., KSh 180,000)..."
                                   oninput="updateMotorcycle(${bike.id}, 'price', this.value)"
                                   class="text-2xl font-bold bg-gradient-to-r from-orange-500 to-orange-600 bg-clip-text text-transparent mb-3 w-full border-b-2 border-transparent hover:border-orange-300 focus:border-orange-500 focus:outline-none transition">
                            
                            <textarea 
                                   placeholder="Description..."
                                   oninput="updateMotorcycle(${bike.id}, 'description', this.value)"
                                   class="text-gray-600 mb-3 w-full border-2 border-transparent hover:border-orange-300 focus:border-orange-500 rounded-lg p-2 focus:outline-none transition resize-none" 
                                   rows="2">${bike.description || ''}</textarea>
                            
                            <div class="flex justify-between text-sm text-gray-500 border-t pt-3 gap-2">
                                <div class="flex items-center gap-1">
                                    <i data-feather="calendar" class="w-4 h-4"></i>
                                    <input type="text" 
                                           value="${bike.year || ''}" 
                                           placeholder="Year"
                                           oninput="updateMotorcycle(${bike.id}, 'year', this.value)"
                                           class="w-16 border-b border-transparent hover:border-orange-300 focus:border-orange-500 focus:outline-none">
                                </div>
                                <div class="flex items-center gap-1">
                                    <i data-feather="activity" class="w-4 h-4"></i>
                                    <input type="text" 
                                           value="${bike.mileage || ''}" 
                                           placeholder="Mileage"
                                           oninput="updateMotorcycle(${bike.id}, 'mileage', this.value)"
                                           class="w-20 border-b border-transparent hover:border-orange-300 focus:border-orange-500 focus:outline-none">
                                </div>
                                <div class="flex items-center gap-1">
                                    <i data-feather="map-pin" class="w-4 h-4"></i>
                                    <input type="text" 
                                           value="${bike.location || ''}" 
                                           placeholder="Location"
                                           oninput="updateMotorcycle(${bike.id}, 'location', this.value)"
                                           class="w-20 border-b border-transparent hover:border-orange-300 focus:border-orange-500 focus:outline-none">
                                </div>
                            </div>
                            
                            <button type="button" 
                                    onclick="deleteMotorcycle(${bike.id})" 
                                    class="mt-4 w-full bg-red-50 text-red-600 hover:bg-red-100 py-2 rounded-lg transition text-sm font-semibold">
                                <i data-feather="trash-2" class="inline w-4 h-4 mr-2"></i> Remove Listing
                            </button>
                        ` : `
                            <!-- View-only mode -->
                            <h3 class="text-xl font-bold mb-2 text-slate-800">${bike.name || 'Motorcycle Name'}</h3>
                            <p class="text-2xl font-bold bg-gradient-to-r from-orange-500 to-orange-600 bg-clip-text text-transparent mb-3">${bike.price || 'Price on Request'}</p>
                            <p class="text-gray-600 mb-3">${bike.description || 'Description not available.'}</p>
                            <div class="flex justify-between text-sm text-gray-500 border-t pt-3">
                                <div class="flex items-center gap-1">
                                    <i data-feather="calendar" class="w-4 h-4"></i>
                                    <span>${bike.year || 'Year'}</span>
                                </div>
                                <div class="flex items-center gap-1">
                                    <i data-feather="activity" class="w-4 h-4"></i>
                                    <span>${bike.mileage || 'Mileage'}</span>
                                </div>
                                <div class="flex items-center gap-1">
                                    <i data-feather="map-pin" class="w-4 h-4"></i>
                                    <span>${bike.location || 'Location'}</span>
                                </div>
                            </div>
                            <button onclick="inquiryMotorcycle('${bike.name || ''}')" 
                                    class="mt-4 w-full bg-gradient-to-r from-orange-500 to-orange-600 hover:from-orange-600 hover:to-orange-700 text-white py-2 rounded-lg transition text-sm font-semibold">
                                <i data-feather="message-circle" class="inline w-4 h-4 mr-2"></i> Inquire About This Bike
                            </button>
                        `}
                    </div>
                </div>
            `).join('');
            
            feather.replace();
        }

        function updateMotorcycle(id, field, value) {
            if (!isAdminLoggedIn) {
                showNotification('Please login to edit listings', 'warning');
                return;
            }
            
            const bike = motorcycles.find(b => b.id === id);
            if (bike) {
                bike[field] = value;
                saveToCache(); // Auto-save to cache
                if (field === 'image') {
                    renderMotorcycles();
                }
            }
        }

        function handleMotorcycleImageUpload(event, bikeId) {
            if (!isAdminLoggedIn) return;
            
            const file = event.target.files[0];
            if (!file) return;

            const validTypes = ['image/jpeg', 'image/jpg', 'image/png'];
            if (!validTypes.includes(file.type)) {
                showNotification('Please upload JPG, JPEG, or PNG images', 'error');
                event.target.value = '';
                return;
            }

            if (file.size > 5 * 1024 * 1024) {
                showNotification('Image size must be less than 5MB', 'error');
                event.target.value = '';
                return;
            }

            const reader = new FileReader();
            reader.onload = function(e) {
                const bike = motorcycles.find(b => b.id === bikeId);
                if (bike) {
                    bike.image = e.target.result;
                    renderMotorcycles();
                    saveToCache();
                    showNotification('Image uploaded successfully', 'success');
                }
            };
            reader.readAsDataURL(file);
        }

        function removeMotorcycleImage(bikeId) {
            if (!isAdminLoggedIn) return;
            
            const bike = motorcycles.find(b => b.id === bikeId);
            if (bike) {
                bike.image = null;
                renderMotorcycles();
                saveToCache();
                showNotification('Image removed', 'info');
            }
        }

        function deleteMotorcycle(id) {
            if (!isAdminLoggedIn) {
                showNotification('Please login to delete listings', 'warning');
                return;
            }
            
            if (confirm('Are you sure you want to delete this motorcycle listing?')) {
                motorcycles = motorcycles.filter(b => b.id !== id);
                renderMotorcycles();
                saveToCache();
                showNotification('Listing deleted', 'info');
            }
        }

        function addNewMotorcycle() {
            if (!isAdminLoggedIn) {
                showLoginModal();
                return;
            }
            
            const newId = motorcycles.length > 0 ? Math.max(...motorcycles.map(b => b.id)) + 1 : 1;
            motorcycles.push({
                id: newId,
                name: 'New Motorcycle',
                price: 'KSh 0',
                description: 'Enter description here...',
                year: '2024',
                mileage: '0 km',
                location: 'Embu',
                image: null
            });
            renderMotorcycles();
            saveToCache();
            showNotification('New listing added', 'success');
            
            setTimeout(() => {
                document.getElementById('featured').scrollIntoView({ behavior: 'smooth' });
            }, 100);
        }

        function inquiryMotorcycle(bikeName) {
            const message = `Hello MWIRUTI JNR, I'm interested in the ${bikeName} motorcycle. Please send me more details.`;
            const encodedMessage = encodeURIComponent(message);
            const whatsappURL = `https://wa.me/254725101417?text=${encodedMessage}`;
            window.open(whatsappURL, '_blank');
        }

        // ====================
        // TESTIMONIALS FUNCTIONS
        // ====================
        
        function renderTestimonials() {
            const container = document.getElementById('testimonials');
            const colorClasses = {
                blue: 'from-blue-400 to-blue-600',
                orange: 'from-orange-400 to-orange-600',
                green: 'from-green-400 to-green-600'
            };
            
            if (!testimonials || testimonials.length === 0) {
                testimonials = [...defaultTestimonials];
            }
            
            container.innerHTML = testimonials.map(t => `
                <div class="bg-white p-6 rounded-xl shadow-lg hover:shadow-xl transition">
                    <div class="flex items-center mb-4">
                        <div class="w-12 h-12 rounded-full bg-gradient-to-br ${colorClasses[t.color] || colorClasses.blue} flex items-center justify-center mr-4">
                            <i data-feather="user" class="text-white"></i>
                        </div>
                        <div class="flex-1">
                            ${isAdminLoggedIn ? `
                                <input type="text" 
                                       value="${t.name}" 
                                       oninput="updateTestimonial(${t.id}, 'name', this.value)"
                                       class="font-semibold text-slate-800 w-full border-b border-transparent hover:border-orange-300 focus:border-orange-500 focus:outline-none">
                                <input type="text" 
                                       value="${t.location}" 
                                       oninput="updateTestimonial(${t.id}, 'location', this.value)"
                                       class="text-gray-500 text-sm w-full border-b border-transparent hover:border-orange-300 focus:border-orange-500 focus:outline-none">
                            ` : `
                                <h4 class="font-semibold text-slate-800">${t.name}</h4>
                                <p class="text-gray-500 text-sm">${t.location}</p>
                            `}
                        </div>
                    </div>
                    ${isAdminLoggedIn ? `
                        <textarea 
                               oninput="updateTestimonial(${t.id}, 'text', this.value)"
                               class="text-gray-700 w-full border-2 border-transparent hover:border-orange-300 focus:border-orange-500 rounded-lg p-2 focus:outline-none transition resize-none" 
                               rows="3">${t.text}</textarea>
                        
                        <div class="mt-4 flex justify-between items-center">
                            <select onchange="updateTestimonial(${t.id}, 'color', this.value)" 
                                    class="text-sm border rounded-lg px-2 py-1">
                                <option value="blue" ${t.color === 'blue' ? 'selected' : ''}>Blue</option>
                                <option value="orange" ${t.color === 'orange' ? 'selected' : ''}>Orange</option>
                                <option value="green" ${t.color === 'green' ? 'selected' : ''}>Green</option>
                            </select>
                            
                            <button type="button" 
                                    onclick="deleteTestimonial(${t.id})" 
                                    class="text-red-500 hover:text-red-700 text-sm">
                                <i data-feather="trash-2" class="w-4 h-4"></i>
                            </button>
                        </div>
                    ` : `
                        <p class="text-gray-700">"${t.text}"</p>
                    `}
                </div>
            `).join('');
            
            if (isAdminLoggedIn) {
                container.innerHTML += `
                    <div class="bg-gradient-to-br from-gray-50 to-gray-100 border-2 border-dashed border-gray-300 rounded-xl p-6 flex flex-col items-center justify-center cursor-pointer hover:border-orange-400 transition"
                         onclick="addNewTestimonial()">
                        <i data-feather="plus" class="w-12 h-12 text-gray-400 mb-3"></i>
                        <p class="font-semibold text-gray-500">Add New Testimonial</p>
                        <p class="text-sm text-gray-400 mt-1">Click to add customer review</p>
                    </div>
                `;
            }
            
            feather.replace();
        }

        function updateTestimonial(id, field, value) {
            if (!isAdminLoggedIn) return;
            
            const testimonial = testimonials.find(t => t.id === id);
            if (testimonial) {
                testimonial[field] = value;
                saveToCache();
            }
        }

        function deleteTestimonial(id) {
            if (!isAdminLoggedIn) return;
            
            if (confirm('Delete this testimonial?')) {
                testimonials = testimonials.filter(t => t.id !== id);
                renderTestimonials();
                saveToCache();
                showNotification('Testimonial deleted', 'info');
            }
        }

        function addNewTestimonial() {
            if (!isAdminLoggedIn) return;
            
            const newId = testimonials.length > 0 ? Math.max(...testimonials.map(t => t.id)) + 1 : 1;
            const colors = ['blue', 'orange', 'green'];
            const randomColor = colors[Math.floor(Math.random() * colors.length)];
            
            testimonials.push({
                id: newId,
                name: 'New Customer',
                location: 'Location',
                text: 'Enter testimonial text here...',
                color: randomColor
            });
            
            renderTestimonials();
            saveToCache();
            showNotification('New testimonial added', 'success');
        }

        // ====================
        // FORM PHOTOS FUNCTIONS
        // ====================
        
        document.getElementById('motorcyclePhotos').addEventListener('change', function(e) {
            const files = Array.from(e.target.files);
            const remaining = 10 - uploadedPhotos.length;
            
            if (files.length > remaining) {
                alert(`You can only upload ${remaining} more photo(s)`);
                return;
            }

            files.forEach(file => {
                if (file.size > 5 * 1024 * 1024) {
                    alert(`${file.name} is too large. Max size is 5MB`);
                    return;
                }

                const reader = new FileReader();
                reader.onload = function(event) {
                    uploadedPhotos.push({file, url: event.target.result});
                    renderPhotoPreview();
                };
                reader.readAsDataURL(file);
            });
            
            e.target.value = '';
        });

        function renderPhotoPreview() {
            const grid = document.getElementById('photoPreviewGrid');
            const count = document.getElementById('photoCount');
            
            grid.innerHTML = uploadedPhotos.map((photo, i) => `
                <div class="relative group">
                    <img src="${photo.url}" alt="Uploaded photo ${i + 1}" class="w-full h-24 object-cover rounded-lg shadow border-2 border-orange-200">
                    <button type="button" 
                            onclick="removePhoto(${i})" 
                            class="absolute -top-2 -right-2 bg-red-500 text-white rounded-full w-8 h-8 flex items-center justify-center shadow-lg hover:bg-red-600 transition font-bold"
                            aria-label="Remove photo">
                        √ó
                    </button>
                </div>
            `).join('');
            
            count.textContent = `${uploadedPhotos.length}/10 photos uploaded`;
            if (uploadedPhotos.length === 10) {
                count.innerHTML += ' <span class="text-red-400">(Maximum reached)</span>';
            }
            
            feather.replace();
        }

        function removePhoto(index) {
            uploadedPhotos.splice(index, 1);
            renderPhotoPreview();
        }

        // ====================
        // FORM SUBMISSION
        // ====================
        
        document.getElementById('sellMotorcycleForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            if (uploadedPhotos.length === 0) {
                alert('Please upload at least one photo of your motorcycle');
                return;
            }

            const formData = new FormData(e.target);
            const data = Object.fromEntries(formData);
            
            let message = `üèçÔ∏è *NEW MOTORCYCLE INQUIRY*\n\n`;
            message += `üë§ *Name:* ${data.name}\n`;
            message += `üì± *Phone:* ${data.phone}\n`;
            message += `üèçÔ∏è *Motorcycle Model:* ${data.model}\n`;
            message += `üìÖ *Year:* ${data.year}\n`;
            if (data.details) {
                message += `üìù *Details:* ${data.details}\n`;
            }
            message += `\nüì∏ *Photos Uploaded:* ${uploadedPhotos.length} photo(s)`;
            message += `\n\n_Submitted via MWIRUTI JNR Website_`;

            const encodedMessage = encodeURIComponent(message);
            const whatsappNumber = '254725101417';
            const whatsappURL = `https://wa.me/${whatsappNumber}?text=${encodedMessage}`;
            
            window.open(whatsappURL, '_blank');
            alert('Opening WhatsApp to send your inquiry...\n\nNote: Photos will need to be sent separately in WhatsApp.');
            
            // Reset form
            e.target.reset();
            uploadedPhotos = [];
            renderPhotoPreview();
        });

        // ====================
        // UTILITY FUNCTIONS
        // ====================
        
        function showNotification(message, type = 'info') {
            if (!isAdminLoggedIn && type !== 'error') return;
            
            const colors = {
                success: 'bg-green-500',
                error: 'bg-red-500',
                warning: 'bg-yellow-500',
                info: 'bg-blue-500'
            };
            
            const icons = {
                success: 'check-circle',
                error: 'alert-circle',
                warning: 'alert-triangle',
                info: 'info'
            };
            
            const notification = document.createElement('div');
            notification.className = `fixed top-20 right-4 px-4 py-3 rounded-lg shadow-lg z-50 transition-all transform translate-x-0 ${colors[type]} text-white`;
            notification.innerHTML = `
                <div class="flex items-center">
                    <i data-feather="${icons[type]}" class="w-5 h-5 mr-2"></i>
                    <span>${message}</span>
                </div>
            `;
            
            document.body.appendChild(notification);
            feather.replace();
            
            setTimeout(() => {
                notification.style.transform = 'translateX(100%)';
                setTimeout(() => notification.remove(), 300);
            }, 3000);
        }

        function shareContact() {
            if (navigator.share) {
                navigator.share({
                    title: 'MWIRUTI JNR Contact',
                    text: 'MWIRUTI JNR - Premium Second Hand Motorcycles\nPhone: 0725 101 417\nEmail: ngethemuigai50@gmail.com\nLocation: Embu Town, Kenya',
                    url: window.location.href
                });
            } else {
                alert('Phone: 0725 101 417\nEmail: ngethemuigai50@gmail.com\n\nShare this link: ' + window.location.href);
            }
        }

        // ====================
        // MOBILE MENU FUNCTIONALITY
        // ====================
        
        document.getElementById('mobileMenuBtn').addEventListener('click', function() {
            const dropdown = document.getElementById('mobileDropdown');
            dropdown.classList.toggle('hidden');
            
            const icon = this.querySelector('i');
            if (dropdown.classList.contains('hidden')) {
                icon.setAttribute('data-feather', 'menu');
            } else {
                icon.setAttribute('data-feather', 'x');
            }
            feather.replace();
        });

        document.addEventListener('click', function(event) {
            const dropdown = document.getElementById('mobileDropdown');
            const menuBtn = document.getElementById('mobileMenuBtn');
            
            if (!dropdown.classList.contains('hidden') && 
                !dropdown.contains(event.target) && 
                !menuBtn.contains(event.target)) {
                dropdown.classList.add('hidden');
                const icon = menuBtn.querySelector('i');
                icon.setAttribute('data-feather', 'menu');
                feather.replace();
            }
        });

        // ====================
        // INITIALIZATION
        // ====================
        
        async function init() {
            try {
                // Show loading screen
                document.getElementById('loadingScreen').classList.remove('hidden');
                document.getElementById('loadingStatus').textContent = 'Loading data...';
                
                // Initialize admin system
                initializeAdminCredentials();
                checkAdminSession();
                
                // Load data from cloud
                document.getElementById('loadingStatus').textContent = 'Fetching motorcycle listings...';
                await loadFromCloud();
                
                // Render everything
                document.getElementById('loadingStatus').textContent = 'Rendering content...';
                renderMotorcycles();
                renderTestimonials();
                renderPhotoPreview();
                
                // Setup event listeners
                document.getElementById('addNewBikeBtn').addEventListener('click', addNewMotorcycle);
                document.getElementById('saveToCloudBtn').addEventListener('click', saveToCloud);
                document.getElementById('logoutBtn').addEventListener('click', logoutAdmin);
                document.getElementById('loginPrompt').addEventListener('click', (e) => {
                    e.preventDefault();
                    showLoginModal();
                });
                
                // Login form
                document.getElementById('loginForm').addEventListener('submit', function(e) {
                    e.preventDefault();
                    
                    const username = document.getElementById('adminUsername').value;
                    const password = document.getElementById('adminPassword').value;
                    const errorDiv = document.getElementById('loginError');
                    
                    if (loginAdmin(username, password)) {
                        errorDiv.classList.add('hidden');
                    } else {
                        errorDiv.classList.remove('hidden');
                        document.getElementById('adminPassword').value = '';
                        document.getElementById('adminPassword').focus();
                    }
                });
                
                // Modal controls
                document.getElementById('adminLoginBtn').addEventListener('click', showLoginModal);
                document.getElementById('mobileAdminLoginBtn').addEventListener('click', showLoginModal);
                document.getElementById('closeLoginModal').addEventListener('click', hideLoginModal);
                
                // Password toggle
                document.getElementById('togglePassword').addEventListener('click', function() {
                    const passwordInput = document.getElementById('adminPassword');
                    const icon = this.querySelector('i');
                    
                    if (passwordInput.type === 'password') {
                        passwordInput.type = 'text';
                        icon.setAttribute('data-feather', 'eye-off');
                    } else {
                        passwordInput.type = 'password';
                        icon.setAttribute('data-feather', 'eye');
                    }
                    feather.replace();
                });
                
                // Close modal on ESC
                document.addEventListener('keydown', function(e) {
                    if (e.key === 'Escape') {
                        hideLoginModal();
                    }
                });
                
                // Initialize feather icons
                feather.replace();
                
                // Hide loading screen
                setTimeout(() => {
                    document.getElementById('loadingScreen').style.opacity = '0';
                    setTimeout(() => {
                        document.getElementById('loadingScreen').classList.add('hidden');
                    }, 300);
                }, 500);
                
                console.log('MWIRUTI JNR fully initialized with cloud data');
                
            } catch (error) {
                console.error('Initialization error:', error);
                document.getElementById('loadingStatus').textContent = 'Error loading data';
                setTimeout(() => {
                    document.getElementById('loadingScreen').classList.add('hidden');
                }, 1000);
                showNotification('Error loading data. Please refresh.', 'error');
            }
        }

        // Start everything when page loads
        document.addEventListener('DOMContentLoaded', init);
    </script>
</body>
</html>